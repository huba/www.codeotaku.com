<page>
	<heading>Samuel's Journal</heading>
	
	<dl class="options">
	<?r links("./", :sort => :title, :files => false, :virtuals => false).reverse.each do |link| ?>
		<dt>#{Date.parse(link.components[0] + "-1").strftime("%B %Y")}</dt>
		<dd>
		<?r links(link.path.dirname, :sort => :created).each do |entry| ?>
			#{entry.to_href}<br/>
		<?r end ?>
		</dd>
	<?r end ?>
	</dl>
</page>